[project]
name = "lunchbox<dev>"
version = "0.3.0"
description = "A library of various tools for common python tasks"
authors = [
    {name = "Alex Braun", email = "alexander.g.braun@gmail.com"},
]
readme = "README.md"
license = {text = "MIT"}
{%- if mode == 'dev' %}
requires-python = ">=3.10"
{%- elif mode in ['test', 'prod'] %}
requires-python = ">=3.7"
{%- endif %}
dependencies = [
    "click>=8.1.3",
    "humanfriendly",
    "wrapt",
]

[project.scripts]
lunchbox = "lunchbox.command:main"

[tool.pdm.dev-dependencies]
{%- if mode == 'dev' %}
lab = [
    "cufflinks",
    "jupyterlab-git",
    "jupyterlab-henanigans>=0.2.2",
    "jupyterlab-sublime",
    "jupyterlab>=3.5.0rc0",
    "rolling-pin>=0.7.0",
]
dev = [
    "flake8",
    "jinja2>=3.1.2",
    "jinja-cli>=1.2.2",
    "mypy",
    "pdm",
    "pdm-bump",
    "sphinx-rtd-theme",
    "sphinx>=5.3.0",
    "toml>=0.10.2",
]
{%- endif %}
{%- if mode in ['dev', 'test'] %}
test = [
    "pytest-cov",
    "pytest-forked",
    "pytest-xdist",
    "pytest",
    "tox-pdm>=0.6.0",
    "tox>=3.26.0",
]
{%- endif %}

{%- if mode in ['dev', 'test'] %}
[tool.pytest.ini_options]
filterwarnings = [
    "ignore::UserWarning",
    "ignore::DeprecationWarning",
    "ignore::PendingDeprecationWarning",
]
markers = [
    "flaky:Flaky test",
]

[tool.pytest.ini_options.report]
show_missing = true
omit = [
    "*/__init__.py",
    "*/*_test_base.py",
    "*/*_test.py",
    "*/*_tests.py",
    "*/cli.py",
    "*/mock_*.py",
    "*/conftest.py",
]

[tool.tox]
legacy_tox_ini = """
[tox]
envlist = py3{10,9,8,7}
distdir = /home/ubuntu/build/dist
setupdir = /home/ubuntu/build/repo
toxworkdir = /home/ubuntu/build/tox
isolated_build = True

[testenv]
setenv =
    PYTHONPATH = ''
groups = test
commands = pytest rolling_pin -c pyproject.toml
"""

[tool.mypy]
python_version = "3.10"
ignore_missing_imports = true
no_warn_no_return = true
pretty = true
warn_unused_ignores = true
{%- endif %}

[build-system]
requires = ["pdm-pep517>=1.0.0"]
build-backend = "pdm.pep517.api"
